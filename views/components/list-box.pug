.card.bg-transparent.mt-2.shadow
    .card-body
        h5(class="mb-0 card-title")
            button(type="button"  id=`title-${task._id}` class="btn font-weight-bold" data-toggle="collapse" data-target=`#desc-${task._id}` aria-expanded="true" aria-controls=`desc-${task._id}`)=task.name
                span(class=`badge badge-pill badge-${task.status ? 'success' : 'secondary'}`)=task.status ? 'Done' : 'Need to be done'
        //- h6(class="ml-3 mb-2 card-subtitle text-muted")= task.status ? "Done" : "Need to be done"
        
        div(id=`desc-${task._id}` class="collapse" aria-labelledby="" data-parent="#todo-list")
            .row
                .col-6
                    p.pl-2.ml-1=task.description
                .col-6
                    img(src=`${appUrl}/images/upload/${task.photo}`, height="200" alt="")
            .float-right.mb-1
                a(href=`${task.id}/delete` onclick="return confirm('Yakin mau dihapus?')" type="button" class="btn mr-2 btn-light font-weight-bold") Delete
                a(href=`${task.id}/edit` type="button" class="btn btn-light font-weight-bold") Edit